@model Diet.ViewModels.StatisticsViewYear;
@{
    ViewData["Title"] = "Statistics Year";
}

<partial name="_StatisticsNavigation"/>

<h1>Year @Model.Year </h1>

<div class = "box">
    <h2>Weight</h2>
    <div id = "weights"></div>
</div>

<div class = "box">
    <h2>Calories</h2>
    <div id = "calories"></div>
</div>

<style>
    .ct-bar {
        stroke-width: 2px;
    }
</style>

<script>
        
    var weights = @Html.Raw(Json.Serialize(Model.Weights));

    var chart = new Chartist.Line('#weights', { 
        //labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
        series: [weights]},
        {
            axisX: {
                labelInterpolationFnc: function(value, index) {
                    return index % 7 === 0 ? value : null;
                }
            },
            scaleMinSpace: 40,
            fullWidth: true,
            lineSmooth: Chartist.Interpolation.simple({
                fillHoles: true,
            }),
        low: 45
    });

    var calories = @Html.Raw(Json.Serialize(Model.Calories));

    var chart1 = new Chartist.Bar('#calories', {
        //labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
        series: [calories]},
        {
            axisX: {
                labelInterpolationFnc: function(value, index) {
                    return index % 7 === 0 ? value : null;
                }
            },
            scaleMinSpace: 40,
            fullWidth: true,
            low: 0
        });
    
</script>



